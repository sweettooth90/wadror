<p id="notice"><%= notice %></p>

<h2>
  <%= @style.name %>
</h2>

<quote>
  <%= @style.description %>
</quote>

<% if %>
  <%= link_to 'Edit', edit_style_path(@style) %> 
  <%= link_to 'Delete', @style, method: :delete, data: { confirm: 'Are you sure?' }%> 
<% end %>

<h4>Beers</h4>

<ul>
  <% @style.beers.each do |beer| %>
    <li>
      <%= link_to beer, beer %>
    </li>
  <% end %>
</ul>

<%= edit_and_destroy_buttons(@style) %>
